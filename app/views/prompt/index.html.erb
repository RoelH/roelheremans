<div class="flex">
  <div class="scroll">
      <%= render 'shared/list'%>
  </div>
  <div class="show">
    <div class="container">
      <div class="work">
        <div class="entete">
          <h1>Inner Portrait Prompt</h1>
        </div>

        <% if flash[:notice] %>
          <div class="paragraph marginbottom1" style="color: #568337;">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <div class="paragraph marginbottom1">
          <p>Copy the prompt and paste it into your LLM.</p>
          <p>Copy the response and paste it into the Answer field, then submit.</p>
        </div>

        <% if @prompt_submission.errors.any? %>
          <div class="red marginbottom1">
            <% @prompt_submission.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          </div>
        <% end %>

        <% prompt_text = "----------------------------------------PROMPT-ANSWER-----------------------------------------------------------------\n--------------------------------PROMPT------------------------------------------------------------------ Ես delays ..." %>
