          prompt_text = [
            "----------------------------------------PROMPT-ANSWER-----------------------------------------------------------------",
            "--------------------------------PROMPT------------------------------------------------------------------ Ես delays ..."
          ].join("\n")
        %>

        <%= form_with model: @prompt_submission, url: prompt_submit_path, method: :post, local: true, class: "prompt-form" do |f| %>
          <div class="prompt-field">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "prompt-input" %>
          </div>

          <div class="prompt-field">
            <%= f.label :email, "Email" %>
            <%= f.email_field :email, class: "prompt-input" %>
          </div>

          <div class="prompt-field">
            <%= f.label :prompt_text, "Prompt" %>
            <div class="prompt-preview-row">
              <div class="prompt-preview-text" id="prompt-preview"></div>
              <button type="button" class="prompt-copy-btn" id="copy-prompt-btn" onclick="copyPrompt()">Copy</button>
            </div>
            <%= f.hidden_field :prompt_text, id: "prompt-hidden-field" %>
          </div>

          <div class="prompt-field">
            <%= f.label :answer_text, "Answer" %>
            <%= f.text_area :answer_text, class: "prompt-answer-input", rows: 1 %>
          </div>

          <div class="prompt-field">
            <%= f.submit "Submit", id: "button-prompt" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

